<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="py-8">
    <!-- Header -->
    <div class="flex justify-between items-start mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Data Record Details</h1>
        <p class="mt-2 text-gray-600">Template: <%= @import_template.name %></p>
        <p class="mt-1 text-sm text-gray-500">
          Created <%= @data_record.created_at.strftime("%B %d, %Y at %l:%M %p") %>
        </p>
      </div>
      <div class="flex space-x-3">
        <%= link_to "Edit Record", edit_import_template_data_record_path(@import_template, @data_record), 
            class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Back to Records", import_template_data_records_path(@import_template), 
            class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
      </div>
    </div>

    <!-- Record Data -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Record Data</h2>
      </div>
      <div class="p-6">
        <% if @import_template.column_headers.any? %>
          <div class="space-y-6">
            <% (1..5).each do |i| %>
              <% column_def = @import_template.column_definition(i) %>
              <% if column_def.present? %>
                <div class="border-l-4 border-blue-500 pl-4">
                  <dt class="text-sm font-medium text-gray-500 uppercase tracking-wide">
                    <%= column_def["name"] %>
                    <span class="text-xs text-gray-400">(<%= column_def["data_type"]&.capitalize %>)</span>
                  </dt>
                  <dd class="mt-1 text-lg text-gray-900">
                    <% value = @data_record.column_value(i) %>
                    <% if value.present? %>
                      <% case column_def["data_type"] %>
                      <% when "boolean" %>
                        <span class="<%= value == 'true' ? 'text-green-600' : value == 'false' ? 'text-red-600' : 'text-gray-500' %>">
                          <%= value == 'true' ? 'Yes' : value == 'false' ? 'No' : 'Not set' %>
                        </span>
                      <% when "date" %>
                        <%= Date.parse(value).strftime("%B %d, %Y") rescue value %>
                      <% when "number" %>
                        <%= number_with_delimiter(value) rescue value %>
                      <% else %>
                        <%= simple_format(value) %>
                      <% end %>
                    <% else %>
                      <span class="text-gray-400 italic">No data provided</span>
                    <% end %>
                  </dd>
                </div>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500">No column definitions available for this template.</p>
        <% end %>
      </div>
    </div>

    <!-- Metadata -->
    <div class="mt-8 bg-gray-50 rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Record Metadata</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">Template</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= link_to @import_template.name, @import_template, class: "text-blue-600 hover:text-blue-900" %>
          </dd>
        </div>
        <% if @data_record.import_batch_id.present? %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Import Batch ID</dt>
            <dd class="mt-1 text-sm text-gray-900 font-mono"><%= @data_record.import_batch_id %></dd>
          </div>
        <% end %>
        <div>
          <dt class="text-sm font-medium text-gray-500">Created</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @data_record.created_at.strftime("%B %d, %Y at %l:%M %p") %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @data_record.updated_at.strftime("%B %d, %Y at %l:%M %p") %></dd>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="mt-8 flex justify-center space-x-3">
      <%= link_to "Edit Record", edit_import_template_data_record_path(@import_template, @data_record), 
          class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-6 rounded" %>
      <%= link_to "Delete Record", [@import_template, @data_record], 
          method: :delete, 
          confirm: "Are you sure you want to delete this record? This action cannot be undone.",
          class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-6 rounded" %>
    </div>
  </div>
</div>
