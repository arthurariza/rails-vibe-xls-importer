<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="py-8">
    <!-- Header -->
    <div class="flex justify-between items-center mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">
          Data Records: <%= @import_template.name %>
        </h1>
        <p class="mt-2 text-gray-600"><%= @import_template.description %></p>
      </div>
      <div class="flex space-x-3">
        <%= link_to "Add Record", new_import_template_data_record_path(@import_template), 
            class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        <% if @data_records.any? %>
          <%= link_to "Export Data", export_data_import_template_path(@import_template), 
              class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
        <% end %>
        <%= link_to "Back to Template", @import_template, 
            class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
      </div>
    </div>

    <!-- Records Count -->
    <div class="mb-6">
      <p class="text-sm text-gray-600">
        <strong><%= @pagy.count %></strong> records found
        <%= "(showing #{@pagy.from}-#{@pagy.to})" if @pagy.pages > 1 %>
      </p>
    </div>

    <!-- Data Records Table -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <% if @data_records.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <% @import_template.template_columns.ordered.each do |template_column| %>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                      title="Type: <%= template_column.data_type.capitalize %><%= template_column.required? ? ' (Required)' : '' %>">
                    <%= template_column.name %>
                    <% if template_column.required? %>
                      <span class="text-red-500 ml-1">*</span>
                    <% end %>
                  </th>
                <% end %>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Created
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @data_records.each do |record| %>
                <tr class="hover:bg-gray-50">
                  <% @import_template.template_columns.ordered.each do |template_column| %>
                    <td class="px-6 py-4 text-sm text-gray-900">
                      <div class="max-w-xs truncate">
                        <% value = record.value_for_column(template_column) %>
                        <% if value.present? %>
                          <%= format_column_value(value, template_column.data_type) %>
                        <% else %>
                          <span class="text-gray-400">-</span>
                        <% end %>
                      </div>
                    </td>
                  <% end %>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= record.created_at.strftime("%m/%d/%Y") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <div class="flex space-x-2">
                      <%= link_to "View", [@import_template, record], 
                          class: "text-blue-600 hover:text-blue-900" %>
                      <%= link_to "Edit", edit_import_template_data_record_path(@import_template, record), 
                          class: "text-green-600 hover:text-green-900" %>
                      <%= link_to "Delete", [@import_template, record], 
                          method: :delete, 
                          confirm: "Are you sure you want to delete this record?",
                          class: "text-red-600 hover:text-red-900" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <% if @pagy.pages > 1 %>
          <div class="bg-white px-4 py-3 border-t border-gray-200 sm:px-6">
            <div class="flex items-center justify-between">
              <div class="flex-1 flex justify-between sm:hidden">
                <% if @pagy.prev %>
                  <%= link_to "Previous", pagy_url_for(@pagy, @pagy.prev), 
                      class: "relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
                <% end %>
                <% if @pagy.next %>
                  <%= link_to "Next", pagy_url_for(@pagy, @pagy.next), 
                      class: "ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
                <% end %>
              </div>
              <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                <div>
                  <p class="text-sm text-gray-700">
                    Showing <strong><%= @pagy.from %></strong> to <strong><%= @pagy.to %></strong> 
                    of <strong><%= @pagy.count %></strong> records
                  </p>
                </div>
                <div>
                  <%== pagy_nav(@pagy, id: "pagy-nav", 
                                class: "relative z-0 inline-flex rounded-md shadow-sm -space-x-px",
                                link_extra: "class='bg-white border-gray-300 text-gray-500 hover:bg-gray-50 relative inline-flex items-center px-4 py-2 border text-sm font-medium'") %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <!-- Empty State -->
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path vector-effect="non-scaling-stroke" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No records</h3>
          <p class="mt-1 text-sm text-gray-500">
            Get started by adding a data record to this template.
          </p>
          <div class="mt-6">
            <%= link_to "Add Record", new_import_template_data_record_path(@import_template), 
                class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Column Information -->
    <% if @import_template.template_columns.any? %>
      <div class="mt-8 bg-gray-50 rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Template Column Information</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% @import_template.template_columns.ordered.each do |template_column| %>
            <div class="bg-white border border-gray-200 rounded p-3">
              <p class="font-medium text-gray-900">
                <%= template_column.name %>
                <% if template_column.required? %>
                  <span class="text-red-500 ml-1">*</span>
                <% end %>
              </p>
              <p class="text-sm text-gray-600">Type: <%= template_column.data_type.capitalize %></p>
              <% if template_column.required? %>
                <p class="text-xs text-red-600">Required</p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
