<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="py-8">
    <!-- Header -->
    <div class="flex justify-between items-center mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">
          Data Records: <%= @import_template.name %>
        </h1>
        <p class="mt-2 text-gray-600"><%= @import_template.description %></p>
      </div>
      <div class="flex space-x-3">
        <%= link_to "Add Record", new_import_template_data_record_path(@import_template), 
            class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Back to Template", @import_template, 
            class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
      </div>
    </div>

    <!-- Records Count -->
    <div class="mb-6">
      <p class="text-sm text-gray-600">
        <strong><%= @data_records.count %></strong> records found
      </p>
    </div>

    <!-- Data Records Table -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <% if @data_records.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <% @import_template.column_headers.each do |header| %>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    <%= header %>
                  </th>
                <% end %>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Created
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @data_records.each do |record| %>
                <tr class="hover:bg-gray-50">
                  <% (1..5).each do |i| %>
                    <% if @import_template.column_definition(i).present? %>
                      <td class="px-6 py-4 text-sm text-gray-900">
                        <div class="max-w-xs truncate">
                          <%= record.column_value(i) || "-" %>
                        </div>
                      </td>
                    <% end %>
                  <% end %>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= record.created_at.strftime("%m/%d/%Y") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <div class="flex space-x-2">
                      <%= link_to "View", [@import_template, record], 
                          class: "text-blue-600 hover:text-blue-900" %>
                      <%= link_to "Edit", edit_import_template_data_record_path(@import_template, record), 
                          class: "text-green-600 hover:text-green-900" %>
                      <%= link_to "Delete", [@import_template, record], 
                          method: :delete, 
                          confirm: "Are you sure you want to delete this record?",
                          class: "text-red-600 hover:text-red-900" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination placeholder -->
        <div class="bg-white px-4 py-3 border-t border-gray-200 sm:px-6">
          <div class="flex-1 flex justify-between sm:justify-end">
            <p class="text-sm text-gray-700">
              Showing <strong><%= @data_records.count %></strong> records
            </p>
          </div>
        </div>
      <% else %>
        <!-- Empty State -->
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path vector-effect="non-scaling-stroke" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No records</h3>
          <p class="mt-1 text-sm text-gray-500">
            Get started by adding a data record to this template.
          </p>
          <div class="mt-6">
            <%= link_to "Add Record", new_import_template_data_record_path(@import_template), 
                class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Column Information -->
    <% if @import_template.column_headers.any? %>
      <div class="mt-8 bg-gray-50 rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Template Column Information</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% (1..5).each do |i| %>
            <% column_def = @import_template.column_definition(i) %>
            <% if column_def.present? %>
              <div class="bg-white border border-gray-200 rounded p-3">
                <p class="font-medium text-gray-900"><%= column_def["name"] %></p>
                <p class="text-sm text-gray-600">Type: <%= column_def["data_type"]&.capitalize %></p>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
