<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="py-8">
    <!-- Header -->
    <div class="flex justify-between items-start mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= @import_template.name %></h1>
        <p class="mt-2 text-gray-600"><%= @import_template.description %></p>
        <p class="mt-1 text-sm text-gray-500">
          Created <%= @import_template.created_at.strftime("%B %d, %Y") %>
        </p>
      </div>
      <div class="flex space-x-3">
        <%= link_to "Edit Template", edit_import_template_path(@import_template), 
            class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Back to Templates", import_templates_path, 
            class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
      </div>
    </div>

    <!-- Column Configuration -->
    <div class="bg-white shadow rounded-lg p-6 mb-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Column Configuration</h2>
      <% if @import_template.column_headers.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% (1..5).each do |i| %>
            <% column_def = @import_template.column_definition(i) %>
            <% if column_def.present? %>
              <div class="border border-gray-200 rounded-lg p-4">
                <h3 class="font-medium text-gray-900">Column <%= i %></h3>
                <p class="text-sm text-gray-600 mt-1">
                  <strong>Name:</strong> <%= column_def["name"] %>
                </p>
                <p class="text-sm text-gray-600">
                  <strong>Type:</strong> <%= column_def["data_type"]&.capitalize %>
                </p>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500">No columns configured yet.</p>
      <% end %>
    </div>

    <!-- Data Records Section -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
        <h2 class="text-xl font-semibold text-gray-900">
          Data Records (<%= @data_records_count %>)
        </h2>
        <div class="flex space-x-3">
          <%= link_to "Add Record", new_import_template_data_record_path(@import_template), 
              class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
          <%= link_to "View All Records", import_template_data_records_path(@import_template), 
              class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
        </div>
      </div>

      <div class="p-6">
        <% if @data_records.any? %>
          <!-- Records Preview Table -->
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <% @import_template.column_headers.each do |header| %>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      <%= header %>
                    </th>
                  <% end %>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Actions
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @data_records.each do |record| %>
                  <tr class="hover:bg-gray-50">
                    <% (1..5).each do |i| %>
                      <% if @import_template.column_definition(i).present? %>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                          <%= record.column_value(i) || "-" %>
                        </td>
                      <% end %>
                    <% end %>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                      <%= link_to "View", [@import_template, record], 
                          class: "text-blue-600 hover:text-blue-900" %>
                      <%= link_to "Edit", edit_import_template_data_record_path(@import_template, record), 
                          class: "text-green-600 hover:text-green-900" %>
                      <%= link_to "Delete", [@import_template, record], 
                          method: :delete, confirm: "Are you sure?",
                          class: "text-red-600 hover:text-red-900" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <% if @data_records_count > @data_records.count %>
            <div class="mt-4 text-center">
              <p class="text-sm text-gray-500 mb-3">
                Showing first <%= @data_records.count %> of <%= @data_records_count %> records
              </p>
              <%= link_to "View All Records", import_template_data_records_path(@import_template), 
                  class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-8">
            <h3 class="text-sm font-medium text-gray-900">No records yet</h3>
            <p class="mt-1 text-sm text-gray-500">Add your first data record to get started.</p>
            <div class="mt-6">
              <%= link_to "Add Record", new_import_template_data_record_path(@import_template), 
                  class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
