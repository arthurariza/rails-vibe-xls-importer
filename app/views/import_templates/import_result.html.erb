<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="py-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Import Results</h1>
      <p class="mt-2 text-gray-600">Template: <%= @import_template.name %></p>
    </div>

    <!-- Import Summary -->
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Import Summary</h2>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="text-center">
            <div class="text-3xl font-bold text-green-600"><%= @import_result.success_count %></div>
            <div class="text-sm text-gray-600">Records Created</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-red-600"><%= @import_result.error_count %></div>
            <div class="text-sm text-gray-600">Errors</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-blue-600"><%= @import_result.processed_count %></div>
            <div class="text-sm text-gray-600">Rows Processed</div>
          </div>
        </div>
        
        <% if @import_result.import_batch_id.present? %>
          <div class="mt-6 pt-6 border-t border-gray-200">
            <div class="text-sm text-gray-600">
              <strong>Batch ID:</strong> 
              <span class="font-mono"><%= @import_result.import_batch_id %></span>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Errors Section -->
    <% if @import_result.has_errors? %>
      <div class="bg-red-50 border border-red-200 rounded-lg mb-8">
        <div class="px-6 py-4 border-b border-red-200">
          <h2 class="text-xl font-semibold text-red-900">Import Errors</h2>
        </div>
        <div class="p-6">
          <div class="space-y-2">
            <% @import_result.errors.each do |error| %>
              <div class="flex items-start">
                <svg class="flex-shrink-0 h-5 w-5 text-red-400 mt-0.5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
                <span class="text-red-800"><%= error %></span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Success Message -->
    <% unless @import_result.has_errors? %>
      <div class="bg-green-50 border border-green-200 rounded-lg mb-8">
        <div class="p-6">
          <div class="flex items-center">
            <svg class="h-6 w-6 text-green-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <div>
              <h3 class="text-lg font-medium text-green-900">Import Successful!</h3>
              <p class="text-green-700"><%= @import_result.summary %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Actions -->
    <div class="flex justify-center space-x-4">
      <% if @import_result.success_count > 0 %>
        <%= link_to "View Imported Records", import_template_data_records_path(@import_template), 
            class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded" %>
      <% end %>
      
      <%= link_to "Import Another File", import_form_import_template_path(@import_template), 
          class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-6 rounded" %>
      
      <%= link_to "Back to Template", @import_template, 
          class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-6 rounded" %>
    </div>
  </div>
</div>