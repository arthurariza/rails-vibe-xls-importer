<%= form_with(model: import_template, local: true) do |form| %>
  <% if import_template.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
      <h3 class="text-sm font-medium text-red-800">
        <%= pluralize(import_template.errors.count, "error") %> prohibited this template from being saved:
      </h3>
      <ul class="mt-2 text-sm text-red-700 list-disc pl-5">
        <% import_template.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :description, rows: 3, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div id="column-configuration" 
         data-controller="column-manager"
         data-column-manager-template-id-value="<%= import_template.id %>">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-lg font-medium text-gray-900">Column Configuration</h3>
        <button type="button" 
                class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded text-sm"
                data-action="click->column-manager#addColumn">
          Add Column
        </button>
      </div>
      
      <div class="space-y-4" data-column-manager-target="columnsContainer">
        <% if import_template.template_columns.any? %>
          <% import_template.template_columns.ordered.each do |column| %>
            <%= render 'column_fields', column: column %>
          <% end %>
        <% else %>
          <p class="text-gray-500 text-center py-8">
            No columns configured. Click "Add Column" to get started.
          </p>
        <% end %>
      </div>
      
      <!-- Template for new columns (hidden) -->
      <template data-column-manager-target="columnTemplate">
        <%= render 'column_fields', column: TemplateColumn.new %>
      </template>
      
      <div class="mt-4 p-4 bg-blue-50 rounded-lg">
        <h4 class="font-medium text-blue-900 mb-2">Preview Excel Structure</h4>
        <div class="flex space-x-2 text-sm" data-column-manager-target="preview">
          <% if import_template.template_columns.any? %>
            <% import_template.template_columns.ordered.each do |column| %>
              <span class="bg-blue-200 text-blue-800 px-2 py-1 rounded"><%= column.name %></span>
            <% end %>
          <% else %>
            <span class="text-gray-500">Add columns to see preview</span>
          <% end %>
        </div>
      </div>
    </div>

    <div class="flex justify-end space-x-3">
      <%= link_to "Cancel", import_templates_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
      <%= form.submit class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
<% end %>