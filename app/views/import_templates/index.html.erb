<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="py-8">
    <div class="flex justify-between items-center">
      <h1 class="text-3xl font-bold text-gray-900">Import Templates</h1>
      <%= link_to "New Template", new_import_template_path, 
          class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>

    <% if @import_templates.any? %>
      <div class="mt-8 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <% @import_templates.each do |template| %>
          <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <h3 class="text-lg font-medium text-gray-900">
                <%= link_to template.name, template, class: "hover:text-blue-600" %>
              </h3>
              <p class="mt-1 text-sm text-gray-500">
                <%= truncate(template.description, length: 100) %>
              </p>
              <div class="mt-3">
                <div class="text-sm text-gray-500">
                  <strong><%= template.data_records.count %></strong> records
                </div>
                <div class="text-xs text-gray-400 mt-1">
                  Created <%= template.created_at.strftime("%B %d, %Y") %>
                </div>
              </div>
              <div class="mt-4 flex space-x-3">
                <%= link_to "View", template, class: "text-blue-600 hover:text-blue-900 text-sm font-medium" %>
                <%= link_to "Edit", edit_import_template_path(template), class: "text-green-600 hover:text-green-900 text-sm font-medium" %>
                <%= link_to "Delete", template, method: :delete,
                    confirm: "Are you sure?", 
                    class: "text-red-600 hover:text-red-900 text-sm font-medium" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <h3 class="mt-2 text-sm font-medium text-gray-900">No templates</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new import template.</p>
        <div class="mt-6">
          <%= link_to "New Template", new_import_template_path, 
              class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
