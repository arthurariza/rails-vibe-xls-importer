<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-10">
      <div class="flex items-center gap-3 mb-4">
        <div class="h-10 w-10 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
          </svg>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Import Excel File</h1>
          <p class="text-lg text-gray-600 mt-1">Template: <span class="font-semibold"><%= @import_template.name %></span></p>
        </div>
      </div>
      <% if @import_template.description.present? %>
        <p class="text-gray-600 bg-gray-100 rounded-lg p-4 border-l-4 border-blue-400"><%= @import_template.description %></p>
      <% end %>
    </div>

    <!-- Template Column Information -->
    <div class="bg-white border border-blue-200 rounded-xl shadow-sm p-8 mb-10">
      <div class="flex items-center gap-3 mb-6">
        <div class="h-8 w-8 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="h-5 w-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div>
          <h2 class="text-xl font-semibold text-gray-900">Expected Excel Headers</h2>
          <p class="text-sm text-gray-600 mt-1">Your Excel file must contain these headers in the first row:</p>
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @import_template.column_headers.each_with_index do |header, index| %>
          <div class="bg-gray-50 border-2 border-dashed border-gray-200 rounded-lg p-4 hover:border-blue-300 transition-colors">
            <div class="font-semibold text-gray-900 mb-1"><%= header %></div>
            <% column_def = @import_template.column_definition(index + 1) %>
            <div class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              <%= column_def["data_type"]&.capitalize %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Upload Form -->
    <div class="bg-white shadow-lg rounded-xl border-0">
      <div class="px-8 py-6 border-b border-gray-200">
        <div class="flex items-center gap-3">
          <div class="h-8 w-8 bg-green-100 rounded-lg flex items-center justify-center">
            <svg class="h-5 w-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
            </svg>
          </div>
          <h2 class="text-xl font-semibold text-gray-900">Upload Excel File</h2>
        </div>
      </div>
      
      <div class="p-8">
        <%= form_with url: import_file_import_template_path(@import_template), 
                      method: :post, 
                      multipart: true, 
                      local: true,
                      class: "space-y-6" do |form| %>
          
          <!-- File Upload Area -->
          <div id="upload-area" class="relative border-2 border-dashed border-gray-300 rounded-xl p-16 text-center hover:border-blue-400 hover:bg-blue-50 transition-all duration-200 cursor-pointer group">
            <div class="space-y-6">
              <div class="mx-auto h-16 w-16 bg-gray-100 rounded-full flex items-center justify-center group-hover:bg-blue-100 transition-colors">
                <svg class="h-8 w-8 text-gray-400 group-hover:text-blue-500" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                  <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
              </div>
              
              <div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">Upload your Excel file</h3>
                <p class="text-gray-600 mb-3">Drag and drop your file here, or click to browse</p>
                <div class="flex items-center justify-center gap-2 text-sm text-gray-500">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">.xlsx</span>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">.xls</span>
                  <span class="text-gray-400">â€¢</span>
                  <span>Max 10MB</span>
                </div>
              </div>
              
              <%= form.file_field :excel_file, 
                  accept: ".xlsx,.xls,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,application/vnd.ms-excel",
                  required: true,
                  class: "absolute inset-0 w-full h-full opacity-0 cursor-pointer",
                  id: "excel_file_input",
                  onchange: "updateFileName(this)" %>
              
              <div id="file-name" class="text-sm font-medium text-green-600 hidden mt-4 p-3 bg-green-50 rounded-lg border border-green-200"></div>
            </div>
          </div>

          <!-- Upload Instructions -->
          <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-xl p-6 border border-blue-100">
            <div class="flex items-start gap-3">
              <div class="h-6 w-6 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                <svg class="h-4 w-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="font-semibold text-gray-900 mb-3">Import Instructions</h3>
                <ul class="text-sm text-gray-700 space-y-2">
                  <li class="flex items-start gap-2">
                    <span class="h-1.5 w-1.5 bg-blue-400 rounded-full mt-2 flex-shrink-0"></span>
                    <span>Ensure your Excel file has headers in the first row that match the expected headers above</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="h-1.5 w-1.5 bg-blue-400 rounded-full mt-2 flex-shrink-0"></span>
                    <span>Headers are case-insensitive but must match exactly</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="h-1.5 w-1.5 bg-blue-400 rounded-full mt-2 flex-shrink-0"></span>
                    <span>Empty rows will be skipped during import</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="h-1.5 w-1.5 bg-blue-400 rounded-full mt-2 flex-shrink-0"></span>
                    <span>Data will be validated according to column types</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="h-1.5 w-1.5 bg-blue-400 rounded-full mt-2 flex-shrink-0"></span>
                    <span>All imported records will be grouped with the same batch ID</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>

          <!-- Form Actions -->
          <div class="flex flex-col sm:flex-row justify-end gap-3">
            <%= link_to @import_template, 
                class: "inline-flex items-center justify-center px-6 py-3 border border-gray-300 shadow-sm text-base font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
              <svg class="-ml-1 mr-2 h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
              Cancel
            <% end %>
            <%= form.submit "Import Data", 
                class: "inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-lg shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors",
                id: "import-submit-btn" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Export Options -->
    <div class="mt-10 bg-white border border-amber-200 rounded-xl shadow-sm p-8">
      <div class="flex items-center gap-3 mb-6">
        <div class="h-8 w-8 bg-amber-100 rounded-lg flex items-center justify-center">
          <svg class="h-5 w-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-gray-900">Need an Excel Template?</h3>
          <p class="text-gray-600 text-sm mt-1">Download a template with the correct headers to get started</p>
        </div>
      </div>
      <div class="flex flex-col sm:flex-row gap-3">
        <%= link_to export_template_import_template_path(@import_template), 
            class: "inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-lg shadow-sm text-white bg-amber-600 hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transition-colors" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          Download Template
        <% end %>
        <%= link_to export_sample_import_template_path(@import_template), 
            class: "inline-flex items-center justify-center px-6 py-3 border border-amber-300 text-base font-medium rounded-lg text-amber-700 bg-amber-50 hover:bg-amber-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transition-colors" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          Download with Sample Data
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- JavaScript for enhanced file upload UI -->
<script>
function updateFileName(input) {
  const fileNameDiv = document.getElementById('file-name');
  const uploadArea = document.getElementById('upload-area');
  
  if (input.files && input.files[0]) {
    const file = input.files[0];
    const fileSize = (file.size / (1024 * 1024)).toFixed(2); // MB
    
    fileNameDiv.innerHTML = `
      <div class="flex items-center gap-2">
        <svg class="h-5 w-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span><strong>${file.name}</strong> (${fileSize} MB)</span>
      </div>
    `;
    fileNameDiv.classList.remove('hidden');
    
    // Update upload area appearance
    uploadArea.classList.add('border-green-300', 'bg-green-50');
    uploadArea.classList.remove('border-gray-300', 'hover:border-blue-400', 'hover:bg-blue-50');
  } else {
    fileNameDiv.classList.add('hidden');
    uploadArea.classList.remove('border-green-300', 'bg-green-50');
    uploadArea.classList.add('border-gray-300', 'hover:border-blue-400', 'hover:bg-blue-50');
  }
}

// Enhanced drag and drop functionality
document.addEventListener('DOMContentLoaded', function() {
  const uploadArea = document.getElementById('upload-area');
  const fileInput = document.getElementById('excel_file_input');
  
  if (uploadArea && fileInput) {
    // Drag and drop events
    uploadArea.addEventListener('dragover', function(e) {
      e.preventDefault();
      uploadArea.classList.add('border-blue-500', 'bg-blue-100');
    });
    
    uploadArea.addEventListener('dragleave', function(e) {
      e.preventDefault();
      uploadArea.classList.remove('border-blue-500', 'bg-blue-100');
    });
    
    uploadArea.addEventListener('drop', function(e) {
      e.preventDefault();
      uploadArea.classList.remove('border-blue-500', 'bg-blue-100');
      
      const files = e.dataTransfer.files;
      if (files.length > 0) {
        fileInput.files = files;
        updateFileName(fileInput);
      }
    });
    
    // Click to upload
    uploadArea.addEventListener('click', function(e) {
      if (e.target.tagName !== 'BUTTON') {
        fileInput.click();
      }
    });
  }
});
</script>