<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="py-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Import Excel File</h1>
      <p class="mt-2 text-gray-600">Template: <%= @import_template.name %></p>
      <p class="mt-1 text-sm text-gray-500"><%= @import_template.description %></p>
    </div>

    <!-- Template Column Information -->
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-8">
      <h2 class="text-lg font-semibold text-blue-900 mb-4">
        <svg class="inline w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        Expected Excel Headers
      </h2>
      <p class="text-sm text-blue-700 mb-4">Your Excel file must contain these headers in the first row:</p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @import_template.column_headers.each_with_index do |header, index| %>
          <div class="bg-white border border-blue-200 rounded p-3">
            <div class="font-medium text-gray-900"><%= header %></div>
            <% column_def = @import_template.column_definition(index + 1) %>
            <div class="text-sm text-gray-600">Type: <%= column_def["data_type"]&.capitalize %></div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Upload Form -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Upload Excel File</h2>
      </div>
      
      <div class="p-6">
        <%= form_with url: import_file_import_template_path(@import_template), 
                      method: :post, 
                      multipart: true, 
                      local: true,
                      class: "space-y-6" do |form| %>
          
          <!-- File Upload Area -->
          <div class="border-2 border-dashed border-gray-300 rounded-lg p-12 text-center hover:border-gray-400 transition-colors">
            <div class="space-y-4">
              <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
              
              <div>
                <h3 class="text-lg font-medium text-gray-900">Upload your Excel file</h3>
                <p class="text-gray-500">Drag and drop or click to select</p>
                <p class="text-sm text-gray-400 mt-2">Supports .xlsx and .xls files (max 10MB)</p>
              </div>
              
              <%= form.file_field :excel_file, 
                  accept: ".xlsx,.xls,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,application/vnd.ms-excel",
                  required: true,
                  class: "sr-only",
                  id: "excel_file_input",
                  onchange: "updateFileName(this)" %>
              
              <label for="excel_file_input" 
                     class="cursor-pointer bg-white rounded-md font-medium text-blue-600 hover:text-blue-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-blue-500">
                <span class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded inline-block">
                  Choose Excel File
                </span>
              </label>
              
              <div id="file-name" class="text-sm text-gray-600 hidden"></div>
            </div>
          </div>

          <!-- Upload Instructions -->
          <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="font-medium text-gray-900 mb-2">Import Instructions:</h3>
            <ul class="text-sm text-gray-600 space-y-1 list-disc pl-5">
              <li>Ensure your Excel file has headers in the first row that match the expected headers above</li>
              <li>Headers are case-insensitive but must match exactly</li>
              <li>Empty rows will be skipped during import</li>
              <li>Data will be validated according to column types</li>
              <li>All imported records will be grouped with the same batch ID</li>
            </ul>
          </div>

          <!-- Form Actions -->
          <div class="flex justify-end space-x-3">
            <%= link_to "Cancel", @import_template, 
                class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-6 rounded" %>
            <%= form.submit "Import Data", 
                class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Export Options -->
    <div class="mt-8 bg-yellow-50 border border-yellow-200 rounded-lg p-6">
      <h3 class="text-lg font-semibold text-yellow-800 mb-4">
        <svg class="inline w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        Need an Excel Template?
      </h3>
      <p class="text-yellow-700 mb-4">Download a template with the correct headers to get started:</p>
      <div class="flex space-x-3">
        <%= link_to "Download Template", export_template_import_template_path(@import_template), 
            class: "bg-yellow-600 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Download with Sample Data", export_sample_import_template_path(@import_template), 
            class: "bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded" %>
      </div>
    </div>
  </div>
</div>

<!-- JavaScript for file name display -->
<script>
function updateFileName(input) {
  const fileNameDiv = document.getElementById('file-name');
  if (input.files && input.files[0]) {
    fileNameDiv.textContent = 'Selected: ' + input.files[0].name;
    fileNameDiv.classList.remove('hidden');
  } else {
    fileNameDiv.classList.add('hidden');
  }
}
</script>