<div id="job_status_<%= job_id %>" class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
  <div class="flex items-center gap-4 mb-4">
    <div class="h-12 w-12 rounded-xl flex items-center justify-center <%= status_indicator_classes(status_data[:status]) %>">
      <%= status_icon_svg(status_data[:status]) %>
    </div>
    <div class="flex-1">
      <h3 class="text-lg font-semibold text-gray-900 mb-1">
        Job Status: <%= status_data[:status].to_s.humanize %>
      </h3>
      <% if status_data[:template_name].present? %>
        <p class="text-sm text-gray-600">Template: <%= status_data[:template_name] %></p>
      <% end %>
    </div>
  </div>

  <div class="space-y-3">
    <!-- Status-specific content -->
    <% case status_data[:status].to_sym %>
    <% when :pending %>
      <div class="flex items-center gap-2 text-sm text-gray-600">
        <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>Waiting to start...</span>
      </div>

    <% when :processing %>
      <div class="flex items-center gap-2 text-sm text-blue-600">
        <svg class="animate-spin h-4 w-4 text-blue-500" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <span>Processing...</span>
      </div>
      <% if status_data[:progress].present? %>
        <div class="text-sm text-gray-600 pl-6">
          <%= status_data[:progress] %>
        </div>
      <% end %>

    <% when :completed %>
      <div class="space-y-2">
        <div class="flex items-center gap-2 text-sm text-green-600">
          <svg class="h-4 w-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span>Completed successfully</span>
        </div>
        <% if status_data[:processed_count].present? %>
          <div class="text-sm text-gray-600 pl-6">
            Processed <%= status_data[:processed_count] %> records
          </div>
        <% end %>
        <% if status_data[:result_summary].present? %>
          <div class="text-sm text-gray-600 pl-6">
            <%= status_data[:result_summary] %>
          </div>
        <% end %>
      </div>

    <% when :failed %>
      <div class="space-y-2">
        <div class="flex items-center gap-2 text-sm text-red-600">
          <svg class="h-4 w-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>Failed to process</span>
        </div>
        <% if status_data[:error_message].present? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-3 ml-6">
            <p class="text-sm text-red-800"><%= status_data[:error_message] %></p>
          </div>
        <% end %>
      </div>

    <% when :not_found %>
      <div class="flex items-center gap-2 text-sm text-gray-500">
        <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>Job status not found</span>
      </div>

    <% else %>
      <div class="flex items-center gap-2 text-sm text-gray-500">
        <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>Unknown status</span>
      </div>
    <% end %>

    <!-- Timestamps -->
    <div class="pt-3 mt-3 border-t border-gray-100 text-xs text-gray-500 space-y-1">
      <% if status_data[:created_at].present? %>
        <div>Created: <%= Time.parse(status_data[:created_at].to_s).strftime("%B %d, %Y at %I:%M %p") %></div>
      <% end %>
      <% if status_data[:started_at].present? %>
        <div>Started: <%= Time.parse(status_data[:started_at].to_s).strftime("%B %d, %Y at %I:%M %p") %></div>
      <% end %>
      <% if status_data[:completed_at].present? %>
        <div>Completed: <%= Time.parse(status_data[:completed_at].to_s).strftime("%B %d, %Y at %I:%M %p") %></div>
      <% end %>
      <% if status_data[:updated_at].present? %>
        <div>Last updated: <%= Time.parse(status_data[:updated_at].to_s).strftime("%B %d, %Y at %I:%M %p") %></div>
      <% end %>
    </div>
  </div>
</div>